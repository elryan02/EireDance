
doctype html
html(lang="en")
  head
    title EireDance
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css')
    link(rel='stylesheet', href='/static/css/main.css')
  body

    header
      h2 Turnout Conditioning Session

    section#content

      form(action='/turnout', method="post")
        label Exercise Name
          input(type='text', name='name' class="form-control form-control-lg" placeholder="")
        label Duration (in seconds)
          input(type='number', name='time' class="form-control form-control-lg" placeholder="")
        button(type='submit' class="btn btn-primary") Submit

      if name
        table
          tr
            th
            th Duration
            th Status
          tr
              td #{name}
              td #{time} seconds
              if isdone
                td complete
              else
                td incomplete
